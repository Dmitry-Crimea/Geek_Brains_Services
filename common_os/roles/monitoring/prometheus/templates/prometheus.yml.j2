# {{ ansible_managed }}
global:
  scrape_interval: 10s
  scrape_timeout: 10s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
    - targets: ['{{ hostvars[inventory_hostname].ansible_host }}:9090']

  - job_name: snmp
    metrics_path: /snmp
    params:
      module: [if_mib]
    static_configs:
    - targets:
      - 192.168.30.245

    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: [__address__]
        target_label: __address__
        replacement: prometheus.sbcode.net:9116


  - job_name: 'node_exporter'
    scrape_interval: 5s
    scrape_timeout: 5s
    metrics_path: /metrics
    scheme: http
    consul_sd_configs:
    - server: 127.0.0.1:8500
      tag_separator: ','
      scheme: http
      services:
        - 'node_exporter'
      allow_stale: true
      refresh_interval: 30s
    relabel_configs:
    - source_labels: [__meta_consul_service]
      separator: ';'
      regex: '(.*)'
      target_label: job
      replacement: $1
      action: replace
    - source_labels: [__meta_consul_tags]
      separator: ','
      regex: ',(.*),'
      target_label: env
      replacement: $1
      action: replace
    - source_labels: [__meta_consul_node]
      separator: ';'
      regex: '(.*)'
      target_label: alias
      replacement: $1
      action: replace

  - job_name: 'django_exporter'
    scrape_interval: 5s
    scrape_timeout: 5s
    metrics_path: /metrics
    scheme: http
    consul_sd_configs:
    - server: 127.0.0.1:8500
      tag_separator: ','
      scheme: http
      services:
        - 'django_exporter'
      allow_stale: true
      refresh_interval: 30s
    relabel_configs:
    - source_labels: [__meta_consul_service]
      separator: ';'
      regex: '(.*)'
      target_label: job
      replacement: $1
      action: replace
    - source_labels: [__meta_consul_tags]
      separator: ','
      regex: ',(.*),'
      target_label: env
      replacement: $1
      action: replace
    - source_labels: [__meta_consul_node]
      separator: ';'
      regex: '(.*)'
      target_label: alias
      replacement: $1
      action: replace
